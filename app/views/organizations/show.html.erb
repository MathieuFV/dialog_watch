<div class="min-h-screen bg-gray-50 py-10 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    
    <%# Navigation %>
    <div class="mb-8">
      <%= link_to dashboards_path(date: @selected_date), class: "text-sm font-medium text-indigo-600 hover:text-indigo-500 flex items-center mb-4" do %>
        <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
        Retour au Dashboard
      <% end %>

      <h2 class="text-2xl font-bold text-gray-900 sm:text-3xl"><%= @organization.name %></h2>
      
      <div class="mt-2 inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-amber-100 text-amber-800 border border-amber-200">
        <svg class="h-4 w-4 mr-2" fill="currentColor" viewBox="0 0 20 20"><path d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.414-1.414L11 9.586V6z"/></svg>
        Données du : <%= l(@selected_date, format: :long) %>
      </div>
    </div>

    <%# Stats Principales %>
    <div class="grid grid-cols-1 gap-5 sm:grid-cols-3 mb-8">
      <div class="bg-white p-6 shadow rounded-lg border-t-4 border-indigo-500">
        <dt class="text-sm font-medium text-gray-500 uppercase">Arrêtés actifs</dt>
        <dd class="text-3xl font-bold text-gray-900"><%= @reg_count %></dd>
      </div>

      <div class="bg-white p-6 shadow rounded-lg border-t-4 border-green-500">
        <dt class="text-sm font-medium text-gray-500 uppercase mb-4">Nature des arrêtés</dt>
        <div class="space-y-3">
          <% [['Permanents', @permanent_count], ['Temporaires', @temporary_count]].each do |label, count| %>
            <% percent = @reg_count.positive? ? (count.to_f / @reg_count * 100) : 0 %>
            <div>
              <div class="flex justify-between text-xs mb-1">
                <span><%= label %></span>
                <span class="font-bold text-gray-700"><%= count %></span>
              </div>
              <div class="w-full bg-gray-100 rounded-full h-2">
                <div class="<%= label == 'Permanents' ? 'bg-indigo-600' : 'bg-green-400' %> h-2 rounded-full" style="width: <%= percent %>%"></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <div class="bg-white p-6 shadow rounded-lg border-t-4 border-orange-500">
        <dt class="text-sm font-medium text-gray-500 uppercase mb-4">Types de restrictions</dt>
        <div class="space-y-3">
          <% if @restriction_counts.any? %>
            <% @restriction_counts.each do |type, count| %>
              <div class="flex justify-between items-center text-sm">
                <span class="flex items-center text-gray-600">
                  <span class="h-2 w-2 rounded-full bg-orange-400 mr-2"></span>
                  <%= t("regulations.types.#{type}", default: type) %>
                </span>
                <span class="font-mono font-bold text-gray-700"><%= count %></span>
              </div>
            <% end %>
          <% else %>
            <p class="text-xs text-gray-400 italic">Aucune restriction détaillée</p>
          <% end %>
        </div>
      </div>
    </div>

    <%# Liste des arrêtés %>
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <div class="px-4 py-5 border-b border-gray-200">
        <h3 class="text-sm font-medium text-gray-500 uppercase">Détail des arrêtés</h3>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID Arrêté</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Période</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @regulations.limit(100).each do |reg| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 text-xs font-mono text-gray-500">
                  <%= reg.regulation_id || reg.external_id %>
                </td>
                <td class="px-6 py-4">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                    <%= t("regulations.types.#{reg.regulation_type}", default: reg.regulation_type) %>
                  </span>
                </td>
                <td class="px-6 py-4 text-sm text-gray-500">
                  <% if reg.end_date.nil? %>
                    <span class="text-green-600 font-medium">Permanent</span>
                  <% else %>
                    Jusqu'au <%= l(reg.end_date, format: :short) %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>