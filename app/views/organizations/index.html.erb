<div class="min-h-screen bg-gray-50 py-10 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    
    <div class="mb-8">
      <%= link_to root_path, class: "text-sm font-medium text-indigo-600 hover:text-indigo-500 flex items-center mb-4" do %>
        <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
        Retour au Dashboard
      <% end %>
      <h2 class="text-2xl font-bold text-gray-900 sm:text-3xl">Classement des Organisations</h2>
    </div>

    <div class="mb-6">
      <div class="sm:flex sm:items-baseline">
        <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide mr-4">Filtrer par type :</h3>
        <nav class="flex space-x-4 mt-2 sm:mt-0">
          <%= link_to "Tous", organizations_path(filter: "all"), class: "px-3 py-2 font-medium text-sm rounded-md #{@filter == 'all' ? 'bg-indigo-100 text-indigo-700' : 'text-gray-500 hover:text-gray-700'}" %>
          <%= link_to "Permanents", organizations_path(filter: "permanent"), class: "px-3 py-2 font-medium text-sm rounded-md #{@filter == 'permanent' ? 'bg-indigo-100 text-indigo-700' : 'text-gray-500 hover:text-gray-700'}" %>
          <%= link_to "Temporaires", organizations_path(filter: "temporary"), class: "px-3 py-2 font-medium text-sm rounded-md #{@filter == 'temporary' ? 'bg-indigo-100 text-indigo-700' : 'text-gray-500 hover:text-gray-700'}" %>
        </nav>
      </div>
    </div>

    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rang</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Organisation</th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre d'arrêtés</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            <% @organizations.each_with_index do |org, index| %>
                <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-500">
                    #<%= index + 1 %>
                </td>

                <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-indigo-600"><%= org.name %></div>
                </td>

                <td class="px-6 py-4 whitespace-nowrap text-right text-sm text-gray-900 font-semibold">
                    <%= org.regs_count %>
                </td>
                </tr>
            <% end %>
        </tbody>
      </table>
      <% if @organizations.empty? %>
        <div class="py-12 text-center text-gray-500 italic">Aucune organisation trouvée pour ce filtre.</div>
      <% end %>
    </div>

  </div>
</div>