<div class="min-h-screen bg-gray-50 py-10 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    
    <div class="mb-8 flex justify-between items-end">
      <div>
        <%= link_to dashboards_path(date: @selected_date), class: "text-sm font-medium text-indigo-600 hover:text-indigo-500 flex items-center mb-4" do %>
          <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
          Retour au Dashboard
        <% end %>
        <h2 class="text-2xl font-bold text-gray-900 sm:text-3xl">Analyse des Arrêtés</h2>
        <div class="mt-2 inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-amber-100 text-amber-800 border border-amber-200">
            <svg class="h-4 w-4 mr-2" fill="currentColor" viewBox="0 0 20 20"><path d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.414-1.414L11 9.586V6z"/></svg>
            Données du : <%= l(@selected_date, format: :long) %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 mb-8">
      <div class="bg-white p-6 shadow rounded-lg">
        <h3 class="text-sm font-medium text-gray-500 uppercase">Nature des arrêtés</h3>
        
        <div class="mt-2 flex items-baseline">
          <span class="text-3xl font-bold text-gray-900"><%= @total_count %></span>
          <span class="ml-2 text-sm font-medium text-gray-500">arrêtés actifs</span>
        </div>

        <div class="mt-4">
          <div class="flex h-4 overflow-hidden rounded bg-gray-100 text-xs">
            <% perm_percent = @total_count.positive? ? (@permanent_count.to_f / @total_count * 100).round(1) : 0 %>
            <div style="width: <%= perm_percent %>%" class="bg-indigo-600 shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center"></div>
            <div style="width: <%= 100 - perm_percent %>%" class="bg-green-400 shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center"></div>
          </div>
          <div class="flex justify-between mt-3 text-sm">
            <div class="flex items-center"><span class="h-3 w-3 bg-indigo-600 rounded-full mr-2"></span> Permanents (<%= perm_percent %>% • <%= @permanent_count %>)</div>
            <div class="flex items-center"><span class="h-3 w-3 bg-green-400 rounded-full mr-2"></span> Temporaires (<%= (100 - perm_percent).round(1) %>% • <%= @temporary_count %>)</div>
          </div>
        </div>
      </div>

    <div class="bg-white p-6 shadow rounded-lg">
        <h3 class="text-sm font-medium text-gray-500 uppercase">Décomptes des restrictions par type</h3>
        <div class="mt-2 space-y-2">
            <% @type_distribution.first(3).each do |type, count| %>
            
            <div class="flex items-center justify-between text-sm mb-1">
                <%= type_badge(type) %>
                <span class="font-semibold text-gray-900"><%= count %></span>
            </div>
            
            <div class="w-full bg-gray-100 rounded-full h-1.5">
                <% bar_class = progress_bar_class_for_type(type) %>
                <div class="<%= bar_class %> h-1.5 rounded-full" style="width: <%= (count.to_f / @total_count * 100).round %>%"></div>
            </div>
            <% end %>
        </div>
    </div>
    </div>

    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <table class="min-w-full divide-y divide-gray-200 table-fixed">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase w-[500px]">ID Arrêté</th>
            
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase w-auto">Organisation</th>
            
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase w-48">Type</th>
            
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase w-64">Période</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @regulations.each do |reg| %>
            <tr class="hover:bg-gray-50 text-sm">
                <td class="px-6 py-4 font-mono text-gray-500 text-xs truncate max-w-0" title="<%= reg.regulation_id || reg.external_id %>">
                    <%= reg.regulation_id || reg.external_id %>
                </td>
              
                <td class="px-6 py-4 text-indigo-600 font-medium truncate max-w-0">
                    <%= link_to reg.organization.name, organization_path(reg.organization, date: @selected_date), class: "hover:underline" %>
                </td>

                <td class="px-6 py-4">
                    <%= type_badge(reg.regulation_type) %>
                </td>
              
                <td class="px-6 py-4 text-gray-500 text-right whitespace-nowrap">
                    <% if reg.end_date.nil? %>
                    <span class="text-green-600 font-medium">Permanent</span>
                <% else %>
                    Du <%= l(reg.start_date, format: :short) %> au <%= l(reg.end_date, format: :short) %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <div class="mt-4 px-6 py-4 border-t border-gray-200 flex justify-center">
          <%== @pagy.series_nav %>
      </div>
    </div>
  </div>
</div>