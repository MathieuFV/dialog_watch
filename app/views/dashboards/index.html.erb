<div class="min-h-screen bg-gray-50 py-10 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    
    <div class="md:flex md:items-center md:justify-between mb-8">

      <div class="md:flex md:items-center md:justify-between mb-8">
        <div class="flex-1 min-w-0">
          <h2 class="text-2xl font-bold text-gray-900 sm:text-3xl sm:truncate">
            Dialog Watch
          </h2>
          <p class="mt-1 text-sm text-gray-500">
            Dernière synchronisation : <%= @last_update ? l(@last_update, format: :long) : "Jamais" %>
          </p>
        </div>
      </div>
      
      <div class="mt-4 flex md:mt-0 md:ml-4">
        <%= button_to refresh_data_path, method: :post, 
          class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 disabled:opacity-50",
          data: { 
            turbo_submits_with: "Synchronisation en cours..."
          } do %>
          Synchroniser
        <% end %>
      </div>
    </div>

    <div class="flex items-center justify-between bg-white p-4 rounded-xl shadow-sm mb-8 border border-gray-100">
      <%= link_to dashboards_path(date: @selected_date - 1.day), class: "flex items-center text-sm font-medium text-indigo-600 hover:text-indigo-500" do %>
        <svg class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
        Hier
      <% end %>
      
      <div class="text-center">
        <span class="block text-xs uppercase tracking-widest text-gray-400 font-bold">Données du</span>
        <span class="text-lg font-bold text-gray-900">
          <%= @is_today ? "Aujourd'hui" : l(@selected_date, format: :long) %>
        </span>
      </div>

      <% if @selected_date < Date.today %>
        <%= link_to dashboards_path(date: @selected_date + 1.day), class: "flex items-center text-sm font-medium text-indigo-600 hover:text-indigo-500" do %>
          Demain
          <svg class="h-5 w-5 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        <% end %>
      <% else %>
        <div class="flex items-center text-sm font-medium text-gray-300 cursor-not-allowed">
          Demain
          <svg class="h-5 w-5 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </div>
      <% end %>
    </div>

    <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3 mb-8">
      
      <%= link_to organizations_path(date: @selected_date), class: "bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow group" do %>
        <div class="px-4 py-5 sm:p-6">
          <dt class="text-sm font-medium text-gray-500 truncate">
            Organisations Actives
          </dt>
          <dd class="mt-1 text-3xl font-semibold text-indigo-600">
            <%= @org_count %>
          </dd>
          
          <dd class="mt-3 flex items-center text-xs text-indigo-600 font-medium group-hover:text-indigo-500">
            <span>Voir plus</span>
            <svg class="ml-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
            </svg>
          </dd>
        </div>
      <% end %>

            
      <%= link_to regulations_path(date: @selected_date), class: "bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow group" do %>
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <dt class="text-sm font-medium text-gray-500 truncate">
              Arrêtés Actifs
            </dt>
            <dd class="mt-1 text-3xl font-semibold text-green-600">
              <%= @reg_count %>
            </dd>

            <dd class="mt-3 flex items-center text-xs text-green-600 font-medium group-hover:text-green-500">
              <span>Voir plus</span>
              <svg class="ml-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
              </svg>
            </dd>

          </div>
        </div>
      <% end %>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <dt class="text-sm font-medium text-gray-500 truncate">Moyenne par Organisation (active)</dt>
          <dd class="mt-1 text-3xl font-semibold text-gray-900">
            <%= @org_count > 0 ? (@reg_count.to_f / @org_count).round(1) : 0 %>
          </dd>
        </div>
      </div>

    </div>

    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
        <h3 class="text-lg leading-6 font-medium text-gray-900">
          Top 5 des contributeurs au <%= l(@selected_date, format: :long) %>
        </h3>
      </div>
      
      <ul role="list" class="divide-y divide-gray-200">
        <% if @top_orgs.any? %>
          <% @top_orgs.each do |org| %>
            <li class="px-4 py-4 sm:px-6 hover:bg-gray-50">
              <div class="flex items-center justify-between">
                <p class="text-sm font-medium text-indigo-600 truncate"><%= org.name %></p>
                <span class="px-2 inline-flex text-xs font-semibold rounded-full bg-green-100 text-green-800">
                  <%= org.regs_count %> arrêtés au total
                </span>
              </div>
            </li>
          <% end %>
        <% else %>
          <li class="px-4 py-10 text-center text-gray-500 italic">
            Aucune donnée disponible pour cette date.
          </li>
        <% end %>
      </ul>
    </div>

  </div>
</div>