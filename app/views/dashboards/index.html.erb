<div class="min-h-screen bg-gray-50 py-10 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    
    <div class="md:flex md:items-center md:justify-between mb-8">
      <div class="flex-1 min-w-0">
        <h2 class="text-2xl font-bold text-gray-900 sm:text-3xl sm:truncate">
          Dialog Watch
        </h2>
        <p class="mt-3 text-sm text-gray-500">
          Dernière synchronisation : <%= @last_update ? l(@last_update, format: :complet) : "Jamais" %>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3 mb-8">
      
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <dt class="text-sm font-medium text-gray-500 truncate">
            Organisations Suivies
          </dt>
          <dd class="mt-1 text-3xl font-semibold text-indigo-600">
            <%= @org_count %>
          </dd>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <dt class="text-sm font-medium text-gray-500 truncate">
            Arrêtés en Base
          </dt>
          <dd class="mt-1 text-3xl font-semibold text-green-600">
            <%= @reg_count %>
          </dd>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <dt class="text-sm font-medium text-gray-500 truncate">
            Moyenne par Organisation
          </dt>
          <dd class="mt-1 text-3xl font-semibold text-gray-900">
            <%= @org_count > 0 ? (@reg_count.to_f / @org_count).round(1) : 0 %>
          </dd>
        </div>
      </div>

    </div>

    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
        <h3 class="text-lg leading-6 font-medium text-gray-900">
          Top 5 des Contributeurs
        </h3>
      </div>
      <ul role="list" class="divide-y divide-gray-200">
        <% @top_orgs.each do |org| %>
          <li class="px-4 py-4 sm:px-6 hover:bg-gray-50">
            <div class="flex items-center justify-between">
              <p class="text-sm font-medium text-indigo-600 truncate">
                <%= org.name %>
              </p>
              <div class="ml-2 flex-shrink-0 flex">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                  <%= org.regulations.count %> arrêtés
                </span>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>

  </div>
</div>